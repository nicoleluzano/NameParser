<Window x:Class="NameParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NameParser"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="417">
    <Grid>
        <Label x:Name="lblInstructions" Content="LastName, FistName, MiddleName" HorizontalAlignment="Left" Margin="19,18,0,0" VerticalAlignment="Top" Width="364" FontFamily="Arial Black"/>
        <TextBox x:Name="txtFullName" HorizontalAlignment="Left" Margin="25,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" Height="31" FontFamily="Century Gothic" FontSize="14"/>
        <Label x:Name="lblFistName" Content="First Name : " HorizontalAlignment="Left" Margin="25,89,0,0" VerticalAlignment="Top" Width="348" FontFamily="Arial Black"/>
        <Label x:Name="lblMiddleName" Content="Middle Name : " HorizontalAlignment="Left" Margin="25,143,0,0" VerticalAlignment="Top" Width="348" FontFamily="Arial Black"/>
        <Label x:Name="lblLastName" Content="Last Name : " HorizontalAlignment="Left" Margin="25,117,0,0" VerticalAlignment="Top" Width="348" FontFamily="Arial Black"/>

    </Grid>
</Window>
